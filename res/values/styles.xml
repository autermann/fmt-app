<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="startActivityButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/start_activity_button_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="startActivityButtonImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <style name="startActivityButtonTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="startActivityButtonDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

    <style name="fmDetailsLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/the_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fmDetailsTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="attributesLabel">
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">#999</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="attributesValue">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="attributesRow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:background">@drawable/table_row_background</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

</resources>