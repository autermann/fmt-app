<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="16dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal" >

        <LinearLayout
            style="@style/startActivityButton"
            android:layout_height="85dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:onClick="startMapActivity" >

            <ImageView
                style="@style/startActivityButtonImage"
                android:src="@drawable/ic_start_map" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/startActivityButtonTitle"
                    android:text="Map" />

                <TextView
                    style="@style/startActivityButtonDescription"
                    android:text="Find flashmobs anywhere in the world" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/startActivityButton"
            android:layout_height="85dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:onClick="startLocationActivity" >

            <ImageView
                style="@style/startActivityButtonImage"
                android:src="@drawable/ic_start_nearby" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/startActivityButtonTitle"
                    android:text="Nearby" />

                <TextView
                    style="@style/startActivityButtonDescription"
                    android:text="Find flashmobs close to your current location" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            style="@style/startActivityButton"
            android:layout_height="85dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:onClick="startAttributesActivity" >

            <ImageView
                style="@style/startActivityButtonImage"
                android:src="@drawable/ic_start_attributes" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/startActivityButtonTitle"
                    android:text="Attributes" />

                <TextView
                    style="@style/startActivityButtonDescription"
                    android:text="Find flashmobs by attributes (time etc.)" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/startActivityButton"
            android:layout_height="85dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:onClick="startMyFlashmobsActivity" >

            <ImageView
                style="@style/startActivityButtonImage"
                android:src="@drawable/ic_start_flashmob" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/startActivityButtonTitle"
                    android:text="My Flashmobs" />

                <TextView
                    style="@style/startActivityButtonDescription"
                    android:text="All flashmobs you participate in" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>