<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eeeeee"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="25dp"
        android:paddingTop="10dp"
        android:text="Find flashmobs by..."
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:orientation="vertical"
        android:padding="2dp" >

        <LinearLayout
            style="@style/startActivityButton"
            android:onClick="startMapActivity" >

            <ImageView
                style="@style/startActivityButtonImage"
                android:src="@drawable/ic_map" />

            <TextView
                style="@style/startActivityButtonText"
                android:text="Map" />
        </LinearLayout>

        <LinearLayout
            style="@style/startActivityButton"
            android:onClick="startLocationActivity" >

            <ImageView
                style="@style/startActivityButtonImage"
                android:src="@drawable/ic_location" />

            <TextView
                style="@style/startActivityButtonText"
                android:text="Location" />
        </LinearLayout>

        <LinearLayout
            style="@style/startActivityButton"
            android:onClick="startNameActivity" >

            <ImageView
                style="@style/startActivityButtonImage"
                android:src="@drawable/ic_text" />

            <TextView
                style="@style/startActivityButtonText"
                android:text="Name" />
        </LinearLayout>

        <LinearLayout
            style="@style/startActivityButton"
            android:layout_marginBottom="0dp"
            android:onClick="startAttributesActivity" >

            <ImageView
                style="@style/startActivityButtonImage"
                android:src="@drawable/ic_list" />

            <TextView
                style="@style/startActivityButtonText"
                android:text="Attributes" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>