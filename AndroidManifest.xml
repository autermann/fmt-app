        </activity>
        <activity
            android:name=".activities.FlashmobDetailsActivity"
            android:label="Details"
            android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="Login"
            android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        </activity>
        <activity
            android:name=".activities.AttributesResultsActivity"
            android:theme="@style/Theme.Sherlock.Light.DarkActionBar" 
